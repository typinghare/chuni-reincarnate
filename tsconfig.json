{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "src",
    "types": [
      "node",
      "reflect-metadata"
    ]
  },
  "include": [
    "lib/**/*"
  ]
}
